@model IEnumerable<MyPartyCore.ViewModels.UserViewModel>
@{
    ViewBag.Title = "Список пользователей";
}

<a asp-action="Create">Добавить пользователя</a>

<table class="table">
    <tr>
        <th>Email</th>
        <th>Имя</th>
        <th>Дата рождения</th>
        <th>Пол</th>
        <th></th>
    </tr>
    @foreach (var user in Model)
    {
        <tr>
            <td>@user.Email</td>
            <td>@user.UserName</td>
            <td>@user.Birthday</td>
            <td>@user.Sex</td>
            <td>
                @if (user.IsLocked)
                {<form asp-action="UnLock" asp-route-id="@user.Id" method="post" style="display : inline-block ;">
                        <button type="submit" class="btn btn-sm btn-secondary">Разаблокировать</button>
                    </form>
                }
                else
                {
                    <form asp-action="Lock" asp-route-id="@user.Id" method="post" style="display : inline-block ;">
                        <button type="submit" class="btn btn-sm btn-primary">Заблокировать</button>
                    </form>
                }
                <form asp-action="Delete" asp-route-id="@user.Id" method="post" style="display : inline-block ;">
                    <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@user.Id">Изменить</a>
                    <a class="btn btn-sm btn-primary" asp-controller="Roles" asp-action="Edit" asp-route-userid="@user.Id">Права доступа</a>
                    <button type="submit" class="btn btn-sm btn-danger">
                        Удалить
                    </button>
                </form>
            </td>
        </tr>
    }
</table>