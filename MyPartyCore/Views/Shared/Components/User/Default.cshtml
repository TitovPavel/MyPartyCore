@using MyPartyCore.ViewModels
@model UserLoginViewModel



@if (Model.IsSignedIn)
{
    <form asp-controller="Account" asp-action="LogOff" method="post" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li>
                <p class="navbar-text">Привет @Model.Login</p>
            </li>
            <li>
                <button type="submit" class="btn btn-link navbar-btn navbar-link">Выход</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a asp-controller="Account" asp-action="Login">Вход</a></li>
    </ul>
}