@model MyPartyCore.ViewModels.PartyViewModel


<h4>Введите информацию о новой вечеринке</h4>
<hr />
<div class="row">
    <div>
        <form asp-action="Add" method="post">

            <div class="text-danger validation-summary-errors" data-valmsg-summary="true">
                <ul>
                    @foreach (var modelState in ViewData.ModelState.Values)
                    {
                        foreach (var error in modelState.Errors)
                        {
                            <li>@error.ErrorMessage</li>
                        }
                    }
                </ul>
            </div>


            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />

                <div class="text-danger validation-summary-errors" data-valmsg-summary="true">
                    <ul>
                        @if (!(ViewData.ModelState["Title"] == null))
                        {
                            foreach (var error in ViewData.ModelState["Title"].Errors)
                            {
                                <li>@error.ErrorMessage</li>
                            }
                        }
                    </ul>
                </div>

            </div>
            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input asp-for="Date" class="form-control" />
                <div class="text-danger validation-summary-errors" data-valmsg-summary="true">
                    <ul>
                        @if (!(ViewData.ModelState["Date"] == null))
                        {
                            foreach (var error in ViewData.ModelState["Date"].Errors)
                            {
                                <li>@error.ErrorMessage</li>
                            }
                        }
                    </ul>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Location" class="control-label"></label>
                <input asp-for="Location" class="form-control" />
                <div class="text-danger validation-summary-errors" data-valmsg-summary="true">
                    <ul>
                        @if (!(ViewData.ModelState["Location"] == null))
                        {
                            foreach (var error in ViewData.ModelState["Location"].Errors)
                            {
                                <li>@error.ErrorMessage</li>
                            }
                        }
                    </ul>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}